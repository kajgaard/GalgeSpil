<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hovedmenu">


    <Button
        android:id="@+id/startKnap"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/colorStartSpil"
        android:text="start spil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/indstillingerKnap"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="160dp"
        android:text="indstillinger"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hjælpKnap"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="hjælp"
        app:layout_constraintBottom_toTopOf="@+id/highscoresKnap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startKnap" />

    <Button
        android:id="@+id/highscoresKnap"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="highscores"
        app:layout_constraintBottom_toTopOf="@+id/indstillingerKnap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hjælpKnap" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Velkommen "
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hovedmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Hovedmenu"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <ImageView
        android:id="@+id/helpIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/hjælpKnap"
        app:layout_constraintStart_toStartOf="@+id/hjælpKnap"
        app:layout_constraintTop_toTopOf="@+id/hjælpKnap"
        app:srcCompat="@drawable/ask_question" />

    <ImageView
        android:id="@+id/playIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/startKnap"
        app:layout_constraintStart_toStartOf="@+id/startKnap"
        app:layout_constraintTop_toTopOf="@+id/startKnap"
        app:layout_constraintVertical_bias="0.55"
        app:srcCompat="@drawable/play" />

    <ImageView
        android:id="@+id/trophyIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/highscoresKnap"
        app:layout_constraintStart_toStartOf="@+id/highscoresKnap"
        app:layout_constraintTop_toTopOf="@+id/highscoresKnap"
        app:srcCompat="@drawable/trophy" />

    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/indstillingerKnap"
        app:layout_constraintStart_toStartOf="@+id/indstillingerKnap"
        app:layout_constraintTop_toTopOf="@+id/indstillingerKnap"
        app:srcCompat="@drawable/settings" />


</androidx.constraintlayout.widget.ConstraintLayout>